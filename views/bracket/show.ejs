<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Goodest Dogg-O</title> 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style_2.css">
    <!-- Google Icon Fonts used by Materialize -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Materialize CSS Framework -->
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0/js/all.min.js"></script>
    
    
</head>
<body>

    <main id="main-1">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#"><i class="fas fa-paw"></i></a>
          
            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                  <a class="nav-link" href="/profile/<%=user._id%>">Back To Profile <span class="sr-only">(current)</span></a>
                </li>
              </ul>
            <ul class="right">
                <li>
                <% if (user) { %>
                    <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
                <% } else { %>
                    <a href="/auth/google"><i class="material-icons left">vpn_key&nbsp;&nbsp;&nbsp;</i>Login with Google</a>
                <% } %>
                </li>
            </ul>
            </div>
        </nav>
    </main>

    <section id="round_1">
        <h1>Round 1:</h1>
    <%competingDogs.forEach(cd => { %>
        <%user.forEach(u =>{ %>
            <% if (u._id.equals(cd.user)) { %>

    <div class="round_1">
      <div class="card" style="width: 18rem;">
        <img src="<%=u.dog[0].URL%>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%=u.dog[0].name%></h5>
          <a href="/bracket/votes/<%=cd.user%>/<%=cd.bracket%>" class="btn btn-primary">Vote</a>
          <p>Votes: <%=cd.votes%></p>
        </div>
      </div>
    </div>
            <% } %>
        <% }); %>
    <% }); %>
    </section>

    <section id="round_2">
        <h1>Round 2:</h1>
    <%for (let i = 0; i < round1winners.length; i++) { %>
        <%user.forEach(u =>{ %>
            <% if (u._id.equals(round1winners[i].user)) { %>

    <div class="round_2">
      <div class="card" style="width: 18rem;">
        <img src="<%=u.dog[0].URL%>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%=u.dog[0].name%></h5>
          <a href="/bracket/votes/<%=round1winners[i].user%>/<%=round1winners[i].bracket%>" class="btn btn-primary">Vote</a>
          <p>Votes: <%=round1winners[i].votes%></p>
        </div>
      </div>
    </div>

            <% } %>
        <% }); %>
    <% }; %>
    
    </section>

    <section id="round_3">
        <h1>Winner!</h1>
            <%user.forEach(u =>{ %>
                <% if (u._id.equals(round2winner[0].user)) { %>
    
        <div class="round_2">
          <div class="card" style="width: 18rem;">
            <img src="<%=u.dog[0].URL%>" class="card-img-top" alt="...">
            
            <div class="card-body">
              <h5 class="card-title"><%=u.dog[0].name%></h5>
              <a href="/bracket/votes/<%=round2winner[0].user%>/<%=round2winner[0].bracket%>" class="btn btn-primary">Vote</a>
              <p>Votes: <%=round2winner[0].votes%></p>
            </div>
          </div>
        </div>
    
                <% } %>
            <% }); %>
    
        </section>

    

</body>
</html>